<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/main_viewPager"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:layout_marginBottom="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <TextView
                    android:id="@+id/areaName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:text="지역이름"
                    android:textColor="#737373"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/storeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp"
                    android:text="상점 이름"
                    android:textColor="#535353"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="10dp"
                    android:text="대여 방법"
                    android:textColor="#535353"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="70dp"
                        android:text="방문대여"
                        android:textColor="#535353"
                        android:textSize="23dp" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="택배(온라인)"
                        android:textColor="#535353"
                        android:textSize="23dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="20dp"
                    android:background="#EDEDED"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- 첫 예약시에는 무조건 방문예약 입니다."
                        android:textColor="#535353"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- 두번째 예약부터 택배(온라인)이 가능합니다."
                        android:textColor="#535353"
                        android:textSize="15dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/dotted_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="개인정보입력"
                    android:textColor="#535353"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="이름"
                            android:textColor="#535353"
                            android:textSize="23dp" />

                        <EditText
                            android:id="@+id/nameinput"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:background="@drawable/view_input"
                            android:hint="홍길동"
                            android:maxLength="10"
                            android:onClick="onClick"
                            android:paddingLeft="20dp"
                            android:paddingTop="3dp"
                            android:singleLine="true"
                            android:textColorHint="#B5B5B5"
                            android:textSize="15dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="성별"
                            android:textColor="#535353"
                            android:textSize="23dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="70dp"
                                android:text="남자"
                                android:textColor="#535353"
                                android:textSize="23dp" />

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="여자"
                                android:textColor="#535353"
                                android:textSize="23dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="생년월일"
                    android:textColor="#535353"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Yearinput"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/view_input"
                        android:hint="2000"
                        android:maxLength="30"
                        android:onClick="onClick"
                        android:paddingLeft="20dp"
                        android:paddingTop="3dp"
                        android:singleLine="true"
                        android:textColorHint="#B5B5B5"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/monthinput"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/view_input"
                        android:hint="05"
                        android:maxLength="30"
                        android:onClick="onClick"
                        android:paddingLeft="20dp"
                        android:paddingTop="3dp"
                        android:singleLine="true"
                        android:textColorHint="#B5B5B5"
                        android:textSize="15dp" />


                    <EditText
                        android:id="@+id/dayinput"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/view_input"
                        android:hint="18"
                        android:maxLength="30"
                        android:onClick="onClick"
                        android:paddingLeft="20dp"
                        android:paddingTop="3dp"
                        android:singleLine="true"
                        android:textColorHint="#B5B5B5"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/calendar_input"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:background="@drawable/calendar_img" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="이메일"
                    android:textColor="#535353"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/email_front"
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/view_input"
                        android:hint="abcd"
                        android:maxLength="30"
                        android:onClick="onClick"
                        android:paddingLeft="20dp"
                        android:paddingTop="3dp"
                        android:singleLine="true"
                        android:textColorHint="#B5B5B5"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/email_back"
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/view_input"
                        android:hint="abcd.com"
                        android:maxLength="30"
                        android:onClick="onClick"
                        android:paddingLeft="20dp"
                        android:paddingTop="3dp"
                        android:singleLine="true"
                        android:textColorHint="#B5B5B5"
                        android:textSize="15dp" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:text="주소"
                    android:textColor="#535353"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="우편번호"
                        android:textSize="20dp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/view_input"
                    android:hint="상세 주소"
                    android:maxLength="30"
                    android:onClick="onClick"
                    android:paddingLeft="20dp"
                    android:paddingTop="3dp"
                    android:singleLine="true"
                    android:textColorHint="#B5B5B5"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="휴대전화"
                    android:textColor="#535353"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/phone_number_input"
                        android:layout_width="248dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/view_input"
                        android:hint="'-'없이 번호만 입력"
                        android:maxLength="30"
                        android:onClick="onClick"
                        android:paddingLeft="20dp"
                        android:paddingTop="3dp"
                        android:singleLine="true"
                        android:textColorHint="#B5B5B5"
                        android:textSize="15dp" />

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="인증번호 발송"
                        android:textSize="20dp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/authentication_number_input"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/view_input"
                    android:gravity="center_vertical"
                    android:hint="인증번호 입력"
                    android:maxLength="30"
                    android:onClick="onClick"
                    android:paddingLeft="20dp"
                    android:paddingTop="3dp"
                    android:singleLine="true"
                    android:textColorHint="#B5B5B5"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/nextbtn_suit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:onClick="onClick"
                    android:text="다음으로" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>